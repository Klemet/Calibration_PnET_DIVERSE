title: Calibration of PnET Succession for the DIVERSE project
author: Cl√©ment Hardy, PhD
logo: ../DIVERSE_PnET_Calibration_Logo.png

# Force re-execution of notebooks on each build.
# See https://jupyterbook.org/content/execute.html
# execute:
  # execute_notebooks: force
  # timeout: 9000

# Define the name of the latex output file for PDF builds
latex:
  latex_documents:
    targetname: book.tex

# Add a bibtex file so that we can create citations
bibtex_bibfiles:
  - references.bib

only_build_toc_files: true

#######################################################################################
# Execution settings
execute:
  execute_notebooks : off
  timeout: 9000


# Information about where the book exists on the web
repository:
  url: https://github.com/Klemet/Calibration_PnET_DIVERSE  # Online location of your book
  path_to_book: docs  # Optional path to your book, relative to the repository root
  branch: master  # Which branch of the repository should be used when creating links (optional)
  
#######################################################################################
# HTML-specific settings
html:
  # favicon                   : ""  # A path to a favicon image
  use_edit_page_button      : false  # Whether to add an "edit this page" button to pages. If `true`, repository information in repository: must be filled in
  use_repository_button     : true  # Whether to add a link to your repository button
  use_issues_button         : true  # Whether to add an "open an issue" button
  use_multitoc_numbering    : true   # Continuous numbering across parts/chapters
  # extra_footer              : ""  # Will be displayed underneath the footer.
  home_page_in_navbar       : true  # Whether to include your home page in the left Navigation Bar
  baseurl                   : "https://klemet.github.io/Calibration_PnET_DIVERSE/intro.html"  # The base URL where your book will be hosted. Used for creating image previews and social links. e.g.: https://mypage.com/mybook/